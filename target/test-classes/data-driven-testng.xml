<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="DataDrivenTestSuite" parallel="false" verbose="2">
    
    <!-- Suite-Level Parameters -->
    <parameter name="browser" value="chrome" />
    <parameter name="environment" value="qa" />
    <parameter name="excelFile" value="testdata/TestData.xlsx" />
    <parameter name="dataSheet" value="TestData" />
    <parameter name="timeout" value="30" />
    
    <!-- ⭐ COMPREHENSIVE LISTENERS SETUP -->
    <listeners>
        <listener class-name="com.naveensdet.unifiedwebautomation.listeners.TestExecutionListener" />
        <listener class-name="com.naveensdet.unifiedwebautomation.listeners.ScreenshotListener" />
        <listener class-name="com.naveensdet.unifiedwebautomation.listeners.SuiteListener" />
        <listener class-name="com.naveensdet.unifiedwebautomation.listeners.DataProviderListener" />
        <listener class-name="com.naveensdet.unifiedwebautomation.listeners.ExcelReportListener" />
    </listeners>
    
    <test name="ExcelDataDrivenTests">
        <groups>
            <run>
                <include name="datadriven" />
                <include name="excel" />
            </run>
        </groups>
        
        <classes>
            <class name="com.naveensdet.unifiedwebautomation.tests.UserRegistrationDataDrivenTests" />
            <class name="com.naveensdet.unifiedwebautomation.tests.LoginDataDrivenTests" />
            <class name="com.naveensdet.unifiedwebautomation.tests.ProductSearchDataDrivenTests" />
        </classes>
    </test>
    
</suite>
